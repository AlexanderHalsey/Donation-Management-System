model Donation {
  id                  String            @id @default(uuid()) @db.Uuid
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt
  donatedAt           DateTime
  amount              Float
  paymentModeId       String            @db.Uuid
  organisationId      String            @db.Uuid
  donationTypeId      String            @db.Uuid
  donationMethodId    String            @db.Uuid
  donationAssetTypeId String            @db.Uuid
  donorId             String            @db.Uuid
  taxReceiptId        String?           @db.Uuid
  donationAssetType   DonationAssetType @relation(fields: [donationAssetTypeId], references: [id])
  donationMethod      DonationMethod    @relation(fields: [donationMethodId], references: [id])
  donationType        DonationType      @relation(fields: [donationTypeId], references: [id])
  donor               Donor             @relation(fields: [donorId], references: [id])
  organisation        Organisation      @relation(fields: [organisationId], references: [id])
  paymentMode         PaymentMode       @relation(fields: [paymentModeId], references: [id])
}
