model FileMetadata {
  id         String     @id @default(uuid()) @db.Uuid
  uploadedAt DateTime   @default(now())
  expiresAt  DateTime?
  storageKey String?
  name       String
  size       Int
  mimeType   String
  hash       String
  status     FileStatus @default(DRAFT)
}

enum FileStatus {
  DRAFT
  ACTIVE
}
